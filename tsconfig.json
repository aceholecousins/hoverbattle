{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["DOM", "ScriptHost"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist/",		
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"incremental": true,
		"baseUrl": "./src"
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	]

}
