{
	"compilerOptions": {
		"target": "ES6",
		"lib": [ "DOM", "ScriptHost" ],
		"moduleResolution": "node",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"incremental": true,
		"baseUrl": "./src",
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"ts-node": {
		"require": [ "tsconfig-paths/register" ]
	}
}
